<Module	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:noNamespaceSchemaLocation="../FrankConfig.xsd">


		<Adapter name="MFHIn" >
			<Receiver> 
				<DirectoryListener
					fileTimeSensitive="true"
					name="MFHIn"
					messageType="info"
					root="C:\temp\mfh"
					inputFolder="in"
					inProcessFolder="inProcess"
					errorFolder="error"
					createFolders="true"
				/>
			</Receiver>
			<Pipeline>
				<Exits>
					<Exit name="READY" state="SUCCESS"  />
				</Exits>
	
				<XsltPipe
					name="wrapInput"
					styleSheetName="xsl/createTriggerMessage.xsl"
					storeResultInSessionKey="triggerMessage"
				>
					<Param name="CanonicalName" xpathExpression="file/@canonicalName" />
					<Param name="Filename" xpathExpression="file/@name" />
					<Param name="MFHFlowId" value="123" /> 
					<Param name="LegacyFlowId" value="345" /> 
					<Param name="OriginalFilename" sessionKey="originalFilename" /> 
					<Param name="LocalTransactionID" sessionKey="messageId" />
				</XsltPipe>
	
				
			</Pipeline>
		</Adapter>

</Module>