<Module	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:noNamespaceSchemaLocation="../FrankConfig.xsd">

	<Adapter name="processfile">
		<Receiver name="processfile">
			<DirectoryListener 
				inputFolder="c:\temp\input" 
				inProcessFolder="c:\temp\inprocess" 
				processedFolder="c:\temp\processed"  
				createFolders="true"
				messageType="contents"/>
		</Receiver>

		<Pipeline>
			<Exits>
				<Exit name="READY" state="SUCCESS"  />

			</Exits>
			<CsvParserPipe name="parsecsv" fieldSeparator=";">
				
			</CsvParserPipe>
			<EchoPipe 
				name="Return success message"
				getInputFromFixedValue="file found and processed successfully"
			/>
			
		</Pipeline>
	</Adapter>

</Module>